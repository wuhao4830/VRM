<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lsh.base.data.bean"><!-- 这里的package记得要写对啊。要不然运行也会出错的 -->
    <class name="Site" table="item_site_article"><!-- 如果表名跟类名一个样的话，那么table属性可以不写 -->
        <id name="id" >
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="scagr" column="scagr"/>
        <property name="rbzul" column="rbzul"/>
        <property name="prerf" column="prerf"/>
        <property name="bwscl" column="bwscl"/>
        <property name="pprice" column="pprice"/>
        <property name="kwdht" column="kwdht"/>
        <property name="sprice" column="sprice"/>
        <property name="dcId" column="dc_id"/>
        <property name="skuId" column="sku_id"/>
        <property name="marketId" column="market_id"/>
        <property name="packSize" column="pack_size"/>
        <property name="isValid" column="is_valid"/>
        <property name="status" column="status"/>
        <property name="createdAt" column="created_at"/>
        <property name="updatedAt" column="updated_at"/>
    </class>
</hibernate-mapping>
        